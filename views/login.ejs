<%- include('partials/head') %>

    <section class="login flex">
        <div class="message">
            <p><%= confirmationMessage %></p>
        </div>
        <div class="login__container">
            <div class="login__form">
                <form action="/authentication/login" class="form" method="POST">
                    <div class="form__heading u-margin-bottom-small">
                        <h1 class="heading__secondary">Login</h1>
                    </div>
                    <div class="form__group">
                        <label for="username">Username</label>
                        <div class="form__group-username">
                            <svg class="form__icon">
                                <use xlink:href="/images/sprite.svg#icon-user"></use>
                            </svg>
                            <input id="username" type="text" name="username" placeholder="Username"
                                   value="<%= usernamePlaceholder %>" required>
                        </div>
                    </div>
                    <div class="form__group">
                        <label for="password">Password</label>
                        <div class="form__group-password">
                            <svg class="form__icon">
                                <use xlink:href="/images/sprite.svg#icon-lock"></use>
                            </svg>
                            <input id="password" type="password" name="password" placeholder="Password" required>
                        </div>

                    </div>
                    <div class="form__group">
                        <input class="submit-btn" type="submit" value="Login">
                    </div>
                </form>
            </div>
            <div class="sign-up">
                <span>Not Registered?</span>
                <span><a href="/authentication/register">SIGN UP</a></span>
            </div>
        </div>
    </section>

<%- include('partials/foot') %>
